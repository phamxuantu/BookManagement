<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.sev_user.bookmanagement.AddActivity">


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="950dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Tiêu Ðề Sách"
            android:paddingStart="15sp"
            android:id="@+id/edName"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Tác Giả"
            android:paddingStart="15sp"
            android:id="@+id/edTacGia"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nhà Xuất Bản"
                android:paddingStart="15sp"
                android:id="@+id/edNXB"

                />


        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nội dung"
            android:paddingStart="15sp"

            android:id="@+id/edNoiDung"

            />

        <TextView

            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Chọn ảnh"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"

            />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_marginLeft="90dp"
            android:id="@+id/Image"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            >
            <Button
                android:id="@+id/btnDongY"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Ðồng Ý"

                android:layout_marginLeft="7dp"
                />

            <Button
                android:id="@+id/btnHuyBo"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Hủy Bỏ"
                android:onClick="buttonCancelClicked"
                android:layout_marginLeft="150dp"
                />
        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>